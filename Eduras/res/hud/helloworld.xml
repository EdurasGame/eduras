<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="nifty.xsd nifty.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<screen id="start" controller="de.illonis.eduras.gameclient.gui.hud.nifty.TestController">
		<layer id="mainlayer" childLayout="vertical" visibleToMouse="true">
			<panel backgroundColor="#003A" width="100%" height="50%"
				childLayout="center">
				<control type="label" id="helloLabel" font="aurulent-sans-16.fnt" color="#ffff"
					text="Hello World!" />
			</panel>
			<panel backgroundColor="#333f" height="10%" childLayout="center">
				<control id="mainTextField" font="aurulent-sans-16.fnt"
					type="textfield" maxLength="20" width="50%" text="bye World!">
					<interact onClick="next()"></interact>
				</control>
			</panel>
			<panel backgroundColor="#333f" height="*" childLayout="center"
				visibleToMouse="true">
				<control id="appendButton" type="button" label="Append"
					visibleToMouse="true">

				</control>
			</panel>

		</layer>
	</screen>
</nifty>
